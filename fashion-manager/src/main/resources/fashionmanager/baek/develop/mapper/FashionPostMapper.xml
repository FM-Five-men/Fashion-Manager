<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fashionmanager.baek.develop.mapper.FashionPostMapper">
    <select id="findAll" resultType="fashionmanager.baek.develop.dto.SelectAllPostDTO">
        SELECT
               num
             , title
             , member_num
             , good
             , cheer
          FROM fashion_post
         ORDER BY num desc;
    </select>
    <resultMap id="selectDetailPostResultMap" type="fashionmanager.baek.develop.dto.SelectDetailPostDTO">
        <id property="num" column="num"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="good" column="good"/>
        <result property="cheer" column="cheer"/>
        <result property="temp" column="temp"/>
        <result property="memberNum" column="member_num"/>
        <collection property="items" ofType="fashionmanager.baek.develop.dto.ItemDTO">
            <id property="num" column="num"/>
            <result property="name" column="name"/>
        </collection>
        <collection property="hashtags" ofType="fashionmanager.kim.develop.dto.HashTagDTO">
            <id property="num" column="num"/>
            <result property="name" column="name"/>
        </collection>
        <collection property="photos" ofType="fashionmanager.baek.develop.dto.PhotoDTO">
            <id property="num" column="num"/>
            <result property="postNum" column="post_num"/>
            <result property="name" column="name"/>
            <result property="path" column="path"/>
            <result property="photoCategoryNum" column="photo_category_num"/>
        </collection>
    </resultMap>
    <select id="findById" resultMap="selectDetailPostResultMap">
        SELECT
               fp.num AS post_num
             , fp.title AS post_title
             , fp.content AS post_content
             , fp.member_num
             , fp.good AS post_good
             , fp.cheer AS post_cheer
             , fi.num AS item_num
             , fi.name AS item_name
             , ht.num AS tag_num
             , ht.name AS tag_name
             , p.num AS photo_num
             , p.name AS photo_name
             , p.path AS photo_path
          FROM fashion_post fp
          LEFT JOIN fahion_item pi ON pi.item_num = fi.num
          LEFT JOIN post_item pi ON fp.num = pi.post_num
          LEFT JOIN fashion_hashtag fh ON fp.num = fh.post_num
          LEFT JOIN hash_tag ht ON fh.tag_num = ht.num
          LEFT JOIN photo p ON fp.num = p.post_num AND p.photo_category_num = 1
         WHERE fp.num = #{num}
    </select>
</mapper>